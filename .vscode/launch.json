    // See https://github.com/golang/vscode-go/blob/master/docs/debugging.md#configuration
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch BlackJack",
            "type": "go",
            "request": "launch",
            "presentation": {
                "hidden": false,
                "group": "",
                "order": 1
            },
            "args": [
                "-minimum=50",
                "-players=2",
                "-house=0",
                "-stack=5000",
                // "-autoplay"
            ],
            "mode": "debug",
            "program": "${workspaceFolder}/go/blackjack",
            "console": "integratedTerminal"
        },
        {
            "name": "Launch Test (short)",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}/go/blackjack/rules",
            "args": [
                "-test.short",
                "-test.v",
                "-test.run",
                "TestCanDoubleDown",
            ],
        },
        {
            "name": "Launch Test (short + coverage)",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}/go/blackjack/rules",
            "buildFlags": "-cover",
            "args": [
                "-test.short",
                "-test.v",
                "-test.coverprofile",
                "cover.out",
                "-test.run",
                "TestCanDoubleDown",
            ],
            "postDebugTask": "gocover"
        },
        {
            "name": "Launch Package Tests (short)",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}/go/blackjack",
            "args": [
                "-test.short",
                "-test.v",
            ],
        },
        {
            "name": "Launch Package Tests (short + coverage)",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}/go/blackjack",
            "buildFlags": "-cover",
            "args": [
                "-test.short",
                "-test.v",
                "-test.coverprofile",
                "cover.out"
            ],
            "postDebugTask": "gocover"
        },
        {
            "name": "Launch Package Tests (all)",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}/go/blackjack",
            "args": [
                "-test.v",
            ],
        },
        {
            "name": "Launch Package Tests (all + coverage)",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}/go/blackjack",
            "buildFlags": "-cover",
            "args": [
                "-test.v",
                "-test.coverprofile",
                "cover.out"
            ],
            "postDebugTask": "gocover"
        }
    ]
}